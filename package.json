		"vitest": "^4.0.18"
	},
	"engines": {
		"node": ">=18"
	},
	"packageManager": "bun@1.3.9",
	"workspaces": [
		"apps/*",
		"packages/*",
		"crates/*",
		"plugins/*"
	]
